<!DOCTYPE html>
<!-- mode: html; coding: utf-8;-->
<html lang="ja">
  <head>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta http-equiv="Content-Script-Type" content="text/javascript">
	<meta http-equiv="content-style-type" content="text/css">
	<title>[% title %]</title>
	<link rel="stylesheet" type="text/css" href="[% c.uri_for('/static/common.css', { mtime => f.mtime }) %]">

	<!-- jquery -->
	<script type="text/javascript" src="[% c.uri_for('/static/js/jquery-1.8.3.js') %]"></script>
	<script src="[% c.uri_for('/static/js/jquery.lightbox_me.js') %]"></script>

  </head>

  [%- menu = 
  [
  { path => 'goods',  name => '商材管理' },
  { path => 'mainte', name => 'メンテナンス' },
  ]
  -%]

  <body onload="onload()">
	<div class="header">
	  [%- FOREACH m = menu %]
	  <a class="nav" href="[% c.uri_for('/' _ m.path) %]">[% m.name %]</a>
	  [%- END # FOREACH %]
	</div>
	<div class="content">
	  [%- submenu = 
	  c.namespace == 'goods' ?
	  [
      { path => '',      name => '検索する' },
      { path => 'edit',  name => '登録する' },
	  ] :
	  c.namespace == 'mainte' ?
	  [
      { path => 'supplier', name => '仕入先' },
      { path => 'taxrate',  name => '税　率' },
	  ] :
	  ''
	  %]
	  [%- IF submenu %]
	  <div class="tabnav">
		<ul class="tabnav-tabs">
		  [%- FOREACH m = submenu %]
		  <li><a class="tabnav-tab [% c.req.path_info.split('/').last == m.path || (c.action.name == 'index' && m.path == '') ? 'selected' : '' %]" href="[% c.uri_for(m.path) %]">[% m.name %]</a></li>
		  [%- END %]
		</ul>
	  </div>
	  [%- END %]
	  [% content %]
	</div>
  </body>
</html>
